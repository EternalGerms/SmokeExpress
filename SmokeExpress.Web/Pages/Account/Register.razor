@page "/account/register"
@using System.ComponentModel.DataAnnotations
@using System.Globalization
@using System.Linq
@using Microsoft.EntityFrameworkCore
@using MudBlazor
@using SmokeExpress.Web.Validation
@using SmokeExpress.Web.Shared.FormControls
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Navigation
@inject ILogger<Register> Logger

@* Projeto Smoke Express - Autores: Bruno Bueno e Matheus Esposto *@

<MudPaper Class="register-card mud-elevation-6 p-6">
    <MudText Typo="Typo.h4" Class="mb-1">Criar conta na Smoke Express</MudText>
    <MudText Typo="Typo.body1" Class="text-muted mb-4">
        Informe seus dados para aproveitar uma experiência discreta e personalizada.
    </MudText>

    <EditForm Model="_model" OnValidSubmit="RegistrarAsync">
        <DataAnnotationsValidator />

        @if (!string.IsNullOrEmpty(_mensagemErro))
        {
            <MudAlert Severity="Severity.Error" Dense="true" Class="mb-4">
                @_mensagemErro
            </MudAlert>
        }

        <MudGrid GutterSize="GutterSize.Small">
            <MudItem xs="12" md="6">
                <MudTextField Label="Nome completo"
                              For="@(() => _model.NomeCompleto)"
                              @bind-Value="_model.NomeCompleto"
                              Immediate="true"
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="E-mail"
                              For="@(() => _model.Email)"
                              @bind-Value="_model.Email"
                              InputType="InputType.Email"
                              Immediate="true"
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudTextField Label="CPF"
                              For="@(() => _model.Cpf)"
                              @bind-Value="_model.Cpf"
                              Immediate="true"
                              HelperText="Digite apenas números."
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudSelect Label="Gênero"
                           @bind-Value="_model.Genero"
                           Dense="true"
                           Placeholder="Selecione..."
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(null as string)">Selecione...</MudSelectItem>
                    <MudSelectItem Value="@GeneroMasculino">@GeneroMasculino</MudSelectItem>
                    <MudSelectItem Value="@GeneroFeminino">@GeneroFeminino</MudSelectItem>
                    <MudSelectItem Value="@GeneroOutro">@GeneroOutro</MudSelectItem>
                    <MudSelectItem Value="@PrefiroNaoInformarOption">@PrefiroNaoInformarOption</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudDatePicker Label="Data de nascimento"
                               @bind-Date="_model.DataNascimento"
                               DateFormat="dd/MM/yyyy"
                               DisplayFormat="dd/MM/yyyy"
                               Culture="@CultureInfo.GetCultureInfo("pt-BR")"
                               Clearable="true"
                               Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="Senha"
                              For="@(() => _model.Senha)"
                              @bind-Value="_model.Senha"
                              InputType="InputType.Password"
                              Immediate="true"
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="Confirmar senha"
                              For="@(() => _model.ConfirmacaoSenha)"
                              @bind-Value="_model.ConfirmacaoSenha"
                              InputType="InputType.Password"
                              Immediate="true"
                              Variant="Variant.Outlined" />
            </MudItem>
        </MudGrid>

        <MudStack Spacing="1" Class="mt-3">
            <MudCheckBox Label="Aceito os termos e condições de uso"
                         @bind-Value="_model.AceiteTermos" />
            <MudCheckBox Label="Desejo receber ofertas e novidades por e-mail"
                         @bind-Value="_model.ConsentiuMarketing" />
        </MudStack>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Success"
                   Class="mt-4"
                   Disabled="@_processando"
                   ButtonType="ButtonType.Submit">
            @(_processando ? "Criando conta..." : "Criar conta")
        </MudButton>

        <MudText Typo="Typo.body2" Class="mt-4">
            Já possui cadastro? <MudLink Href="/account/login">Entre agora</MudLink>
        </MudText>
    </EditForm>
</MudPaper>

@code {
    private readonly RegisterInput _model = new();
    private const string GeneroMasculino = "Masculino";
    private const string GeneroFeminino = "Feminino";
    private const string GeneroOutro = "Outro";
    private const string PrefiroNaoInformarOption = "Prefiro não informar";
    private bool _processando;
    private string? _mensagemErro;

    private async Task RegistrarAsync()
    {
        _mensagemErro = null;

        if (_model.Senha != _model.ConfirmacaoSenha)
        {
            _mensagemErro = "As senhas informadas não coincidem.";
            return;
        }

        if (_model.DataNascimento == null || _model.DataNascimento > DateTime.UtcNow.AddYears(-18))
        {
            _mensagemErro = "É necessário ter ao menos 18 anos para criar uma conta.";
            return;
        }

        _processando = true;

        try
        {
            var cpfLimpo = MaskUtils.RemoveMask(_model.Cpf, MaskType.CpfCnpj);

            if (await UserManager.Users.AnyAsync(u => u.DocumentoFiscal == cpfLimpo))
            {
                _mensagemErro = "Já existe um cliente cadastrado com este CPF.";
                return;
            }

            var usuario = new ApplicationUser
            {
                UserName = _model.Email,
                Email = _model.Email,
                NomeCompleto = _model.NomeCompleto,
                DocumentoFiscal = cpfLimpo,
                TipoCliente = "PF",
                DataNascimento = _model.DataNascimento ?? DateTime.UtcNow.AddYears(-18),
                Genero = _model.Genero,
                ConsentiuMarketing = _model.ConsentiuMarketing,
                TermosAceitosEm = _model.AceiteTermos ? DateTime.UtcNow : null,
                EmailConfirmed = true // Confirmação manual para simplificar o fluxo acadêmico
            };

            var resultado = await UserManager.CreateAsync(usuario, _model.Senha);

            if (resultado.Succeeded)
            {
                await SignInManager.SignInAsync(usuario, isPersistent: false);
                Navigation.NavigateTo("/");
                return;
            }

            _mensagemErro = string.Join(" ", resultado.Errors.Select(e => e.Description));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao registrar usuário {Email}", _model.Email);
            _mensagemErro = "Não foi possível concluir o cadastro. Tente novamente mais tarde.";
        }
        finally
        {
            _processando = false;
        }
    }

    private sealed class RegisterInput
    {
        [Required(ErrorMessage = "Informe seu nome completo.")]
        [StringLength(200, ErrorMessage = "O nome pode conter no máximo 200 caracteres.")]
        public string NomeCompleto { get; set; } = string.Empty;

        [Required(ErrorMessage = "Informe um e-mail válido.")]
        [EmailAddress(ErrorMessage = "Formato de e-mail inválido.")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Informe seu CPF.")]
        [CustomValidation(typeof(InputValidation), nameof(InputValidation.ValidateCpfCnpj))]
        public string Cpf { get; set; } = string.Empty;

        [DataType(DataType.Date)]
        public DateTime? DataNascimento { get; set; }

        [Required(ErrorMessage = "Informe uma senha válida.")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "A senha deve possuir ao menos 8 caracteres.")]
        [DataType(DataType.Password)]
        public string Senha { get; set; } = string.Empty;

        [Required(ErrorMessage = "Confirme a senha.")]
        [DataType(DataType.Password)]
        public string ConfirmacaoSenha { get; set; } = string.Empty;

        [Required(ErrorMessage = "Selecione seu gênero.")]
        public string Genero { get; set; } = string.Empty;

        [CustomValidation(typeof(InputValidation), nameof(InputValidation.ValidateAceiteTermos))]
        public bool AceiteTermos { get; set; }

        public bool ConsentiuMarketing { get; set; }
    }
}
