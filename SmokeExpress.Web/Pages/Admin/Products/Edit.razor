@page "/admin/produtos/{Id:int}/editar"
@attribute [Authorize(Roles = "Admin")]
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject IImageUploadService ImageUploadService
@inject ILogger<Edit> Logger

@* Projeto Smoke Express - Autores: Bruno Bueno e Matheus Esposto *@

@if (_carregando)
{
    <p>Carregando produto...</p>
}
else if (_produto == null)
{
    <div class="alert alert-warning" role="alert">
        <h4>Produto não encontrado</h4>
        <p>O produto solicitado não foi encontrado.</p>
        <a href="/admin/produtos" class="btn btn-primary">Voltar para listagem</a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Editar Produto</h3>
        <button type="button" class="btn btn-danger" @onclick="PrepararExclusao">
            <span class="oi oi-trash" aria-hidden="true"></span> Excluir
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_mensagemErro))
    {
        <div class="alert alert-danger" role="alert">@_mensagemErro</div>
    }

    <ProductForm Produto="_produto" OnSave="HandleSave" />
}

<!-- Modal de Confirmação de Exclusão -->
@if (_mostrarModalExclusao)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" @onclick="CancelarExclusao" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir o produto <strong>@(_produto?.Nome)</strong>?</p>
                    <p class="text-danger"><small>Esta ação não pode ser desfeita.</small></p>
                    @if (!string.IsNullOrEmpty(_erroExclusao))
                    {
                        <div class="alert alert-danger" role="alert">@_erroExclusao</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarExclusao">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarExclusao" disabled="@_excluindo">
                        @if (_excluindo)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span>Excluindo...</span>
                        }
                        else
                        {
                            <span>Excluir</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Product? _produto;
    private bool _carregando = true;
    private string? _mensagemErro;

    // Exclusão
    private bool _mostrarModalExclusao = false;
    private bool _excluindo = false;
    private string? _erroExclusao;

    protected override async Task OnInitializedAsync()
    {
        await CarregarProdutoAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        await CarregarProdutoAsync();
    }

    private async Task CarregarProdutoAsync()
    {
        _carregando = true;
        _mensagemErro = null;

        try
        {
            _produto = await ProductService.ObterPorIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao carregar produto {Id}", Id);
            _mensagemErro = $"Erro ao carregar o produto: {ex.Message}";
        }
        finally
        {
            _carregando = false;
        }
    }

    private async Task HandleSave(Product produto)
    {
        _mensagemErro = null;

        try
        {
            await ProductService.AtualizarAsync(produto);
            Navigation.NavigateTo("/admin/produtos?success=updated");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao atualizar produto {Id}", Id);
            _mensagemErro = $"Erro ao atualizar produto: {ex.Message}";
            StateHasChanged();
        }
    }

    private void PrepararExclusao()
    {
        _mostrarModalExclusao = true;
        _erroExclusao = null;
        StateHasChanged();
    }

    private void CancelarExclusao()
    {
        _mostrarModalExclusao = false;
        _erroExclusao = null;
        StateHasChanged();
    }

    private async Task ConfirmarExclusao()
    {
        if (_produto == null) return;

        _excluindo = true;
        _erroExclusao = null;
        StateHasChanged();

        try
        {
            // Verificar se o produto tem pedidos associados
            var produto = await ProductService.ObterPorIdAsync(_produto.Id);
            if (produto == null)
            {
                _erroExclusao = "Produto não encontrado.";
                _excluindo = false;
                StateHasChanged();
                return;
            }

            // Remover imagem se existir
            if (!string.IsNullOrWhiteSpace(produto.ImagemUrl))
            {
                await ImageUploadService.DeleteProductImageAsync(produto.ImagemUrl);
            }

            // Remover produto
            await ProductService.RemoverAsync(_produto.Id);

            // Redirecionar para listagem
            Navigation.NavigateTo("/admin/produtos?success=deleted");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao excluir produto {Id}", Id);
            _erroExclusao = $"Erro ao excluir produto: {ex.Message}";
        }
        finally
        {
            _excluindo = false;
            StateHasChanged();
        }
    }
}

