@page "/admin/produtos"
@attribute [Authorize(Roles = "Admin")]
@using SmokeExpress.Web.Constants
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject IImageUploadService ImageUploadService

@* Projeto Smoke Express - Autores: Bruno Bueno e Matheus Esposto *@

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Administração de Produtos</h3>
    <div class="d-flex gap-2">
        <a href="/admin/categorias" class="btn btn-outline-secondary">
            <span class="oi oi-tags" aria-hidden="true"></span> Categorias
        </a>
        <a href="/admin/produtos/novo" class="btn btn-primary">
            <span class="oi oi-plus" aria-hidden="true"></span> Novo Produto
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(_mensagemErro))
{
    <div class="alert alert-danger" role="alert">@_mensagemErro</div>
}
else if (_carregando)
{
    <p>Carregando produtos...</p>
}
else if (_resultado?.Items.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Nenhum produto cadastrado no momento. Utilize a área administrativa para adicionar novos itens ao catálogo.
    </div>
}
else if (_resultado != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 80px;">Imagem</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                    <th style="width: 150px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in _resultado.Items)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(produto.ImagemUrl))
                            {
                                <img src="@produto.ImagemUrl" alt="@produto.Nome" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <span class="text-muted small">-</span>
                                </div>
                            }
                        </td>
                        <td>@produto.Nome</td>
                        <td>@produto.Categoria?.Nome</td>
                        <td>@produto.Preco.ToString("C")</td>
                        <td>@produto.Estoque</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="@($"/admin/produtos/{produto.Id}/editar")" class="btn btn-outline-primary" title="Editar">
                                    <span class="oi oi-pencil" aria-hidden="true"></span>
                                </a>
                                <button type="button" class="btn btn-outline-danger" @onclick="() => PrepararExclusao(produto)" title="Excluir">
                                    <span class="oi oi-trash" aria-hidden="true"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (_resultado.TotalPages > 1)
    {
        <nav aria-label="Navegação de páginas">
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item @(!_resultado.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" href="@ObterUrlPagina(_resultado.PageNumber - 1)" aria-label="Anterior">
                        <span aria-hidden="true">&laquo; Anterior</span>
                    </a>
                </li>
                <li class="page-item active">
                    <span class="page-link">
                        Página @_resultado.PageNumber de @_resultado.TotalPages
                    </span>
                </li>
                <li class="page-item @(!_resultado.HasNextPage ? "disabled" : "")">
                    <a class="page-link" href="@ObterUrlPagina(_resultado.PageNumber + 1)" aria-label="Próxima">
                        <span aria-hidden="true">Próxima &raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <p class="text-center text-muted mt-2">
            Exibindo @((_resultado.PageNumber - 1) * _pageSize + 1) até @Math.Min(_resultado.PageNumber * _pageSize, _resultado.TotalCount) de @_resultado.TotalCount produtos
        </p>
    }
}

<!-- Modal de Confirmação de Exclusão -->
@if (_produtoParaExcluir != null)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" @onclick="CancelarExclusao" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir o produto <strong>@_produtoParaExcluir.Nome</strong>?</p>
                    @if (!string.IsNullOrEmpty(_erroExclusao))
                    {
                        <div class="alert alert-danger" role="alert">@_erroExclusao</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarExclusao">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarExclusao" disabled="@_excluindo">
                        @if (_excluindo)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span>Excluindo...</span>
                        }
                        else
                        {
                            <span>Excluir</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [SupplyParameterFromQuery(Name = "page")]
    public int? PageQuery { get; set; }

    private PagedResult<Product>? _resultado;
    private bool _carregando = true;
    private string? _mensagemErro;
    private const int _pageSize = ApplicationConstants.AdminPageSize;

    // Exclusão
    private Product? _produtoParaExcluir;
    private bool _excluindo = false;
    private string? _erroExclusao;

    private int PageNumber => PageQuery ?? 1;

    protected override async Task OnInitializedAsync()
    {
        await CarregarProdutosAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (PageQuery.HasValue)
        {
            await CarregarProdutosAsync();
        }
    }

    private async Task CarregarProdutosAsync()
    {
        _carregando = true;
        _mensagemErro = null;

        try
        {
            _resultado = await ProductService.ListarPaginadoAsync(PageNumber, _pageSize);
        }
        catch (Exception ex)
        {
            _mensagemErro = $"Erro ao carregar os produtos: {ex.Message}";
        }
        finally
        {
            _carregando = false;
        }
    }

    private string ObterUrlPagina(int pagina)
    {
        return $"/admin/produtos?page={pagina}";
    }

    private void PrepararExclusao(Product produto)
    {
        _produtoParaExcluir = produto;
        _erroExclusao = null;
        StateHasChanged();
    }

    private void CancelarExclusao()
    {
        _produtoParaExcluir = null;
        _erroExclusao = null;
        StateHasChanged();
    }

    private async Task ConfirmarExclusao()
    {
        if (_produtoParaExcluir == null) return;

        _excluindo = true;
        _erroExclusao = null;
        StateHasChanged();

        try
        {
            // Verificar se o produto tem pedidos associados
            var produto = await ProductService.ObterPorIdAsync(_produtoParaExcluir.Id);
            if (produto == null)
            {
                _erroExclusao = "Produto não encontrado.";
                _excluindo = false;
                StateHasChanged();
                return;
            }

            // Remover imagem se existir
            if (!string.IsNullOrWhiteSpace(produto.ImagemUrl))
            {
                await ImageUploadService.DeleteProductImageAsync(produto.ImagemUrl);
            }

            // Remover produto
            await ProductService.RemoverAsync(_produtoParaExcluir.Id);

            // Recarregar lista
            await CarregarProdutosAsync();
            _produtoParaExcluir = null;
        }
        catch (Exception ex)
        {
            _erroExclusao = $"Erro ao excluir produto: {ex.Message}";
        }
        finally
        {
            _excluindo = false;
            StateHasChanged();
        }
    }
}



